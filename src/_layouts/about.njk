---
layout: base
---

<header class="section spot-color-primary">
  <div class="section__inner">
    <div class="wrapper flow region">
      <h1 class="text-center">{{ title }}</h1>
      <div class="text-center" role="doc-subtitle">{{ subtitle }}</div>
    </div>
  </div>
  {% include "svg/divider-waves.svg" %}
</header>

<article class="region">
  <div class="wrapper flow prose">
    <h1 class="gradient-text">{{ title }}</h1>
    <p>{{ about.intro }}</p>
    <p><mark>{{ about.highlight }}</mark> {{ about.postHighlight }}</p>
    {% imagePlaceholder about.image, about.alt %}
    {{ content | safe }}
  </div>
</article>
