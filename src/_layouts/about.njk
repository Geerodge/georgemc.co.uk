---
layout: base
---

<header class="section spot-color-primary">
  <div class="section__inner">
    <div class="wrapper flow region about top">
      <h1 class="text-center shadow">{{ title }}</h1>
      <h4 class="text-center" role="doc-subtitle">{{ subtitle }}</h4>
    </div>
  </div>
  {% include "svg/divider-waves.svg" %}
</header>

<article class="section region">
  <div class="about-me wrapper">
    <div class="wrapper flow prose about-image">
      {% imagePlaceholder about.image, about.alt %}
    </div>
    <div class="wrapper flow prose">
      <h2 class="gradient-text">{{ title }} Me</h2>
      <p>{{ about.intro }}</p>
      <p><mark>{{ about.highlight }}</mark>{{ about.postHighlight }}</p>
      <p>{{ about.quote }}</p>
    </div>
  </div>
</article>

<article class="section region" style="--region-space-top: var(--space-xs)">
  <div class="wrapper flow prose about">
      {{ content | safe }}
  </div>
</article>
