---
layout: base
---

<header class="section spot-color-primary">
  <div class="section__inner">
    <div class="wrapper flow region">
      <h1 class="text-center">{{ title }}</h1>
      <div class="text-center" role="doc-subtitle">{{ subtitle }}</div>
    </div>
  </div>
  {% include "svg/divider-waves.svg" %}
</header>

<article class="region">
  <div class="wrapper flow prose text-center">
    <h2 id="{{ newsletter.heading | slugify }}">
      <a class="heading-anchor" href="#{{ newsletter.heading | slugify }}">{{ newsletter.heading }}</a>
    </h2>
    <p style="max-width: unset;">{{ newsletter.content }}</p>
    {% include "partials/signup.njk" %}
  </div>
</article>

<article class="section line-full spot-color-primary region">
  {% include "svg/divider-curve.svg" %}
  <div class="section__inner region">
    <div class="wrapper flow prose text-center">
      {{ content | safe }}
    </div>
    {% include "partials/services.njk" %}
  </div>
</article>

<article class="region" style="--region-space-top: var(--space-s)">
  <div class="wrapper flow prose text-center">
    <h2>{{ blog.title }}</h2>
    <!-- blog intro text is optional. -->
    {% if blog.intro %}
    <p style="max-width: unset;">{{ blog.intro }}</p>
    {% endif %}
  </div>
  <!-- TODO: duplicate of partials/blog.njk -->

  <ul class="wrapper grid mt-l-xl" role="list" data-rows="masonry" data-layout="50-50">
    {% set postslist = collections.posts %} {% for post in postslist.slice(0, 2) %}

    <li class="card flow clickable-card overflow-hidden">
      <h3>
        <a href="{{ post.url | url }}">{{ post.data.title }}</a>
      </h3>
      {% set definedDate = post.date %} {% include "partials/date.njk" %}
      <p>{{ post.data.description }}</p>
    </li>

    {% endfor %}
  </ul>
</article>
